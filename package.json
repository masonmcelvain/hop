{
   "name": "hop",
   "version": "1.1.16",
   "description": "An icon-first bookmark manager",
   "main": "src/public/index.tsx",
   "packageManager": "pnpm@10.11.0",
   "engines": {
      "node": "22.15.1"
   },
   "scripts": {
      "dev:chrome": "env-cmd -e dev-chrome ./build.ts",
      "dev:firefox": "env-cmd -e dev-firefox ./build.ts",
      "preview:firefox": "env-cmd -e preview-firefox web-ext run",
      "build": "conc \"pnpm build:chrome\" \"pnpm build:firefox\"",
      "build:chrome": "env-cmd -e prod-chrome ./build.ts",
      "build:firefox": "env-cmd -e prod-firefox ./build.ts",
      "lint": "eslint .",
      "lint:fix": "eslint --fix .",
      "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}'",
      "prepare": "husky",
      "test": "playwright test",
      "type-check": "tsc --project src/ --noEmit & tsc --project tests/ --noEmit & wait"
   },
   "author": "Mason McElvain",
   "license": "MIT",
   "dependencies": {
      "@chakra-ui/react": "2.10.8",
      "@emotion/react": "11.14.0",
      "@emotion/styled": "11.14.0",
      "framer-motion": "11.18.2",
      "react": "19.1.0",
      "react-dnd": "16.0.1",
      "react-dnd-html5-backend": "16.0.1",
      "react-dom": "19.1.0",
      "react-feather": "2.0.10",
      "zod": "3.24.4",
      "zustand": "5.0.4"
   },
   "devDependencies": {
      "@babel/core": "7.27.1",
      "@eslint/compat": "1.2.9",
      "@eslint/eslintrc": "3.3.1",
      "@eslint/js": "9.27.0",
      "@playwright/test": "1.52.0",
      "@types/node": "22.15.18",
      "@types/react": "19.1.4",
      "@types/react-dom": "19.1.5",
      "@types/webextension-polyfill": "0.12.3",
      "@typescript-eslint/eslint-plugin": "8.32.1",
      "@typescript-eslint/parser": "8.32.1",
      "concurrently": "9.1.2",
      "dotenv": "16.5.0",
      "env-cmd": "10.1.0",
      "esbuild": "0.25.4",
      "eslint": "9.27.0",
      "eslint-config-prettier": "10.1.5",
      "eslint-plugin-react": "7.37.5",
      "eslint-plugin-react-hooks": "5.2.0",
      "globals": "16.1.0",
      "husky": "9.1.7",
      "lint-staged": "16.0.0",
      "prettier": "3.5.3",
      "ts-node": "10.9.2",
      "typescript": "5.8.3",
      "web-ext": "8.6.0",
      "webextension-polyfill": "0.12.0"
   },
   "lint-staged": {
      "*": "prettier --write --ignore-unknown"
   }
}
